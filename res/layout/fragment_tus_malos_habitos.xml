<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/purple_dark"> <!-- Color sólido en lugar de imagen -->

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tituloTusHabitosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus Malos Hábitos"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <!-- Lista de malos hábitos -->
    <TextView
        android:id="@+id/malosHabitosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:text="Aquí se mostrarán tus hábitos registrados."
        android:textSize="18sp" />

    <!-- Botón Volver -->
    <Button
        android:id="@+id/volverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Volver"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_blue_light" />

</LinearLayout>
